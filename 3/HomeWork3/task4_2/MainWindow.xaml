<Window
    x:Class="task4_2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:task4_2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindowTask2"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Label
                x:Name="label"
                Margin="10"
                HorizontalAlignment="Center"
                Content="Це вікно з успадкованими елементами керування" />
            <TextBox
                x:Name="textBox"
                Width="200"
                Margin="10"
                HorizontalAlignment="Center"
                Text="Введіть текст" />
            <Button
                x:Name="button"
                Margin="10"
                HorizontalAlignment="Center"
                Content="Натисніть мене" />
        </StackPanel>
    </Grid>
</Window>
