<Window
    x:Class="task2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <StackPanel Margin="10">
                <Label Content="Новий заголовок:" />
                <TextBox x:Name="NewTitleTextBox" Margin="0,0,0,10" />

                <RadioButton
                    x:Name="SetTitleRadioButton"
                    Margin="0,0,0,5"
                    Content="Встановити новий заголовок" />
                <RadioButton x:Name="CloseWindowRadioButton" Content="Закрити вікно" />
                <!--  Додайте свої варіанти радіокнопок за потребою  -->

                <Button
                    Margin="0,10,0,0"
                    Click="SearchButton_Click"
                    Content="Виконати" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
